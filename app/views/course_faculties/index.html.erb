<p id="notice"><%= notice %></p>

<h1>Course Faculties</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_faculties.each do |course_faculty| %>
      <tr>
        <td><%= course_faculty.course.num %></td>
        <td><%= course_faculty.professor.fullname %></td>
        <td><%= link_to 'Show', course_faculty %></td>
        <td><%= link_to 'Edit', edit_course_faculty_path(course_faculty) %></td>
        <td><%= link_to 'Destroy', course_faculty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

